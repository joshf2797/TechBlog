
<div class="text">
  <div class="text-primary">
  <h2>{{title}}</h2>
  </div>
  <h6>Created by {{user.username}} | {{format_date date_created}}</h6>
  <p>{{description}}</p>
</div>
<div>
{{#if logged_in}}
<form class="new-comment-form" data-postid={{id}}>
    <div class="form-outline mb-4">
      <textarea class="form-control" id="textAreaExample" rows="4" placeholder="Comment"></textarea>
    </div>
  <div>
      <button type="submit" class="btn btn-dark btn-block mb-4">Add Comment</button>
  </div>
</form>
{{/if}}
</div>
 <h6>Comments:</h6>
 {{#each comments as |comment|}}
 <div class="border rounded m-2 p-2">
 <p>{{comment.comment_text}}</p>
  <p>{{user.username}} on {{format_date date_created}}</p>
 </div>
 {{/each}}

 <script src="/js/comments.js"></script>