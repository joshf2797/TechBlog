
<div class="row justify-content-left">
  <div class="col-auto">
    <h3>Welcome, {{username}}!</h3>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-6">
    <h3>Create a New Post:</h3>

    <form class="form new-post-form">
    <div class="form-outline mb-4">
      <input class="form-control" type="text" id="title" name="Title" placeholder="Title" />
    </div>

    <div class="form-outline mb-4">
      <textarea class="form-control" id="textAreaExample" rows="4" placeholder="Description"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-dark btn-block mb-4">Submit</button>
    </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button type="button" class="btn btn-outline-secondary" data-id="{{post.id}}">Delete</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
